@model ASP_Core_Project.Data.SelectedDetailsModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employee Details</h2>

@if (Model != null)
{
    <table class="table">
        <tr>
            <th>
                Department Name
            </th>

            <th></th>
        </tr>

        @if (Model != null)
        {
            foreach (var item in Model.Department)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartmentName)
                    </td>


                    <td>
                        <a href="@Url.Action("Index", "Details", new { DepartmentID = item.DepartmentID })" class="bt btn-default">Select</a>
                    
                    </td>
                </tr>
            }

        }


    </table>
}



@if (Model != null)
{
    <table class="table table-hover">
        <tr>
            <th>
                FirstName
            </th>
            <th>
                Lastname
            </th>
            <th>
                Address
            </th>
            <th>
                Contact
            </th>
            <th>
                ImageFile
            </th>
            <th>
                DepartmentName
            </th>
            <th>
                JobTitle
            </th>
            <th></th>
        </tr>

        @if (Model.Employee != null)
        {
            foreach (var item in Model.Employee)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lastname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contact)
                    </td>
                    <td>
                        <img src="@Url.Content(item.ImageFile)" width="100" height="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Job.JobTitle)
                    </td>
                    <td>
                        @Html.ActionLink("Select", "Index", new { EmployeeID = item.EmployeeID }) |
                        @Html.ActionLink("Edit", "Edit", "Employees", new { id = item.EmployeeID }, null) |
                        @Html.ActionLink("Details", "Details", "Employees", new { id = item.EmployeeID }, null) |
                        @Html.ActionLink("Delete", "Delete", "Employees", new { id = item.EmployeeID }, null)
                    </td>
                </tr>
            }

        }


    </table>






    @if (Model != null)
     {
        <table class="table  table-hover">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Company Name
                </th>
                <th>
                    Certificate Name
                </th>

                <th>
                    Institute Name
                </th>
                <th>
                    JobStartt Date
                </th>

                <th>
                    Job End Date
                </th>
                <th></th>
            </tr>

            @if (Model.EmploymentHistory != null)
             {
                foreach (var item in Model.EmploymentHistory)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Company.Branch_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Certificate.CertificateName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Institute.InstituteName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.JobStarttDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.JobEndDate)
                        </td>

                        <td>
                            @*@Html.ActionLink("Select", "Index", new { EmployeeID = item.EmployeeID }) |*@
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }, null) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }, null) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, null)
                        </td>
                    </tr>
                }

             }


        </table>
     }



 }





